<yz:BorderlessWindows10Window x:Class="YzWpfTest.Views.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:yz="clr-namespace:YzWpfControls;assembly=YzWpfControls"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YzWpfTest"
        mc:Ignorable="d"
        TitleBarHeight="50"
        ShowWindowControls="False"
        Height="670" 
        Width="1022">
    <Grid>
        <Border VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="50"
                Background="{DynamicResource Brush_WindowHeaderBackground}"
                BorderThickness="0 0 0 2" BorderBrush="{DynamicResource Brush_WindowHeaderBorderBursh}"/>
    </Grid>
</yz:BorderlessWindows10Window>
